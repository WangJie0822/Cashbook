<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 应用主题 -->
    <style name="Theme.Cashbook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- 材质颜色 -->
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorPrimarySurface">@color/color_primary_surface</item>
        <item name="colorOnPrimarySurface">@color/color_on_primary_surface</item>
        <!-- 错误颜色 -->
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>

        <!-- 字体设置 -->
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.Cashbook.PopupMenu</item>

        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/color_window_background</item>

        <!-- 动画相关 -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <!-- 闪屏界面主题 -->
    <style name="Theme.Cashbook.Splash">
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@drawable/layer_splash_background</item>
    </style>

    <!-- 弹窗默认主题 -->
    <style name="Theme.Cashbook.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog" />

    <!-- 全半透明背景 -->
    <style name="Theme.Cashbook.Dialog.Transparent" >
        <item name="android:windowBackground">@drawable/shape_window_background_transparent</item>
    </style>

    <!-- 底部抽屉弹窗 -->
    <style name="Theme.Cashbook.Dialog.BottomSheet">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <!-- 警告弹窗 -->
    <style name="Theme.Cashbook.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" />

    <!-- AppBar 样式 -->
    <style name="Theme.Cashbook.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <!-- Popup 样式 -->
    <style name="Theme.Cashbook.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- PopupMenu 字体样式 -->
    <style name="TextAppearance.Cashbook.PopupMenu" parent="android:TextAppearance.Material.Caption" />

</resources>