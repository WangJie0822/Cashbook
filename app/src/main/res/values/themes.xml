<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 兼容夜间模式 -->
    <style name="NightAdjusted.Theme.Cashbook" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- 兼容 values-v 不同版本 -->
    <style name="PlatformAdjusted.Theme.Cashbook" parent="NightAdjusted.Theme.Cashbook">
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <!-- 应用主题 -->
    <style name="Theme.Cashbook" parent="PlatformAdjusted.Theme.Cashbook" />

    <!-- 启动主题 -->
    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- 启动页主题 -->
    <style name="Theme.Cashbook.Splash" parent="NightAdjusted.Theme.Splash">
        <!-- 启动页背景 -->
        <item name="windowSplashScreenBackground">@color/color_primary</item>
        <!-- 启动页显示的图标 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/layer_splash_background</item>
        <!-- 显示时长，上限 1000ms -->
        <item name="windowSplashScreenAnimationDuration">250</item>
        <!-- 退出启动页后使用的主题 -->
        <item name="postSplashScreenTheme">@style/Theme.Cashbook</item>
    </style>

    <!-- 弹窗默认主题 -->
    <style name="Theme.Cashbook.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog" />

    <!-- 全半透明背景 -->
    <style name="Theme.Cashbook.Dialog.Transparent">
        <item name="android:windowBackground">@drawable/shape_window_background_transparent</item>
    </style>

    <!-- 底部抽屉弹窗 -->
    <style name="Theme.Cashbook.Dialog.BottomSheet">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <!-- 警告弹窗 -->
    <style name="Theme.Cashbook.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" />

    <!-- AppBar 样式 -->
    <style name="Theme.Cashbook.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <!-- Popup 样式 -->
    <style name="Theme.Cashbook.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- PopupMenu 字体样式 -->
    <style name="TextAppearance.Cashbook.PopupMenu" parent="android:TextAppearance.Material.Caption" />

</resources>